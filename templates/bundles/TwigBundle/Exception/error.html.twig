{% extends 'base.html.twig' %}

{% block title %}Error!{% endblock %}

{% block body %}
	<div class="d-flex flex-column justify-content-center align-items-center h-100 p-5">
		<div class="error-head bg-orange-primary h-25 w-100"></div>
		<p class="bg-white p-5 text-center w-100">
            {% block error_message %}
                Sorry, Service unavailable please try later again... <br/> 
                <a href="{{ path('app_home') }}" class="btn bg-orange-primary text-white text-monst-semibold signin-btn spacing-6 border-0 mt-4">Home Page</a>
            {% endblock %}
        </p>
	</div>
{% endblock %}