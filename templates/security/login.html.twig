{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
	<div class="d-flex flex-column justify-content-center align-items-center">
		<div class="login m-5">
			<div class="login-head bg-orange-primary"></div>
			<div class="login-form">
				<a class="active" href="{{ path('app_login') }}">Login</a>
				<a href="{{ path('app_register') }}">Register</a>

				{% if error %}
					<div class="alert alert-danger mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{# {% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %} #}

				<form class="pt-5" method="post">
					<div class="col-sm-12">
						<label for="email">Email</label>
						<div class="input-group mb-4">
							<div class="input-group-prepend">
								<div class="input-group-text input-rounded-left">
									<span class="oi oi-envelope-closed" title="envelope-closed" aria-hidden="true"></span>
								</div>
							</div>
							<input type="email" name="email" value="{{ last_username }}" class="form-control input-rounded-right" id="email" placeholder="Your Email" required autofocus>
						</div>
					</div>
					<div class="col-sm-12">
						<label for="password">Password</label>
						<div class="input-group mb-4">
							<div class="input-group-prepend">
								<div class="input-group-text input-rounded-left">
									<span class="oi oi-lock-locked" title="lock-locked" aria-hidden="true"></span>
								</div>
							</div>
							<input type="password" name="password" class="form-control input-rounded-right" id="password" placeholder="Your password" required>
						</div>
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
					<div class="col-sm-12">
						<button type="submit" class="btn btn-block bg-orange-primary mb-4 input-rounded text-white">Submit</button>
					</div>
					<div class="col-sm-12">
						<div class="form-check mb-4">
							<input class="form-check-input" type="checkbox" id="autoSizingCheck">
							<label class="form-check-label" for="autoSizingCheck">
								Remember me
							</label>
						</div>
					</div>
				</div>
				<div class="login-footer"></div>
			</div>
		</div>
	</div>
{% endblock %}
